{
  "name": "spark-monitoring",
  "version": "0.0.1",
  "description": "A tool to extract metrics from Spark Jobs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "pretest": "npm run clean && npm run build",
    "test": "./node_modules/.bin/nyc ./node_modules/.bin/mocha dist/test/**/*spec.js",
    "posttest": "npm run lint",
    "build": "tsc",
    "format": "prettier --write \"{lib,test,bin}/**/*.{ts,js}\" \"*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepublishOnly": "npm test",
    "clean": "del-cli dist temporary coverage"
  },
  "keywords": [
    "spark",
    "monitoring",
    "metrics"
  ],
  "author": "Adauto Martins <adauto.martins@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.7.0",
    "bunyan": "^1.8.12",
    "commander": "^3.0.2",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.26",
    "node-localstorage": "^1.3.1",
    "node-zabbix-sender": "^1.1.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.28",
    "@types/bunyan": "^1.8.6",
    "@types/chai": "^4.2.4",
    "@types/chai-as-promised": "^7.1.2",
    "@types/commander": "^2.12.2",
    "@types/lodash": "^4.14.146",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.7",
    "@types/node-localstorage": "^1.3.0",
    "@types/request-promise": "^4.1.44",
    "@types/sinon": "^7.5.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "del-cli": "^3.0.0",
    "mocha": "^6.2.2",
    "nock": "^11.6.0",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "semantic-release": "^15.13.30",
    "sinon": "^7.5.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/addomafi/spark-monitoring"
  },
  "bin": {
    "zabbix-spark-monitor": "./dist/bin/zabbix-monitor.js"
  },
  "files": [
    "dist/**/*"
  ],
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "test",
      "bin"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
